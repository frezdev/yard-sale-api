{
  "rewrites": [
    {
      "source": "/",
      "destination": "/api"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api"
    }
  ],

  "builds": [
    {
      "src": "/api/index.js",
      "use": "@now/node"
    }
  ],

  "files": [
    {
      "source": "/public/**",
      "destination": "/public/$1"
    }
  ]
}