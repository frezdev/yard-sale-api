{
  "rewrites": [
    {
      "source": "/",
      "destination": "/api"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api"
    },
    { "source": "/(.*)", "destination": "/public/" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],

  "builds": [
    {
      "src": "/api/index.js",
      "use": "@now/node"
    }
  ]
}